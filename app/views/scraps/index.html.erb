<p id="notice"><%= notice %></p>

<h1>Listing Scraps</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Syntax</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scraps.each do |scrap| %>
      <tr>
        <td><%= scrap.body.truncate(20) %></td>
        <td><%= scrap.syntax %></td>
        <td><%= scrap.scrap_views.count %></td>
        <td><%= link_to 'Show', scrap %></td>
        <td><%= link_to 'Edit', edit_scrap_path(scrap) %></td>
        <td><%= link_to 'Destroy', scrap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

